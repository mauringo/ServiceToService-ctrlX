#!/bin/sh

cd cd $SNAP_DATA/service-token/servicetoservicedemo

python3 $SNAP/bin/unlicense.py #i try to remove the license anyway 

rm licensed #i force the removal anyway

python3 $SNAP/bin/license.py #i check the license anytime

if [ -f licensed ]; then  #if the app is licensed i start it correctly otherwise is unlicensed
    echo 'Licensed'
    python3 $SNAP/bin/app.py
else
    echo 'unLicensed'
    sleep infinity
fi
